<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/header_left_padding"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@drawable/material_background"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <!-- IMAGEN DEL PERFIL-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_height="@dimen/perfil_image_size"
        android:layout_width="@dimen/perfil_image_size"
        android:src="@drawable/perfil"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"
        android:id="@+id/perfil_imagen"/>

    <!-- NOMBRE DE USUARIO -->

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/username"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="Maria Angeles"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/email"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="mari@fabricaweb.es"/>

</LinearLayout>